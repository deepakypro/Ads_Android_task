<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".Activity.DetailsComicActivity">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen56dp"
    android:background="@color/primaryColor"
    >
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <ImageButton
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:id="@+id/leadership_back_button"
        style="@style/rapple_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        />


      <TextView
        android:id="@+id/toolbar_tv"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/dimen8dp"

        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="@dimen/textspace16sp"/>
    </RelativeLayout>
  </android.support.v7.widget.Toolbar>


  <ImageView
    android:id="@+id/imageview"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginTop="@dimen/dimen8dp"/>

  <android.support.v7.widget.CardView
    style="@style/rapple_effect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="@dimen/cardrad"
    app:cardElevation="@dimen/cardevel">


    <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
        android:id="@+id/title_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/title"
        android:textColor="@color/black"/>

      <TextView
        android:id="@+id/text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/title_text_tv"
        android:alpha="0.80"

        android:textColor="@color/newblack"/>

      <TextView
        android:id="@+id/date_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/text_tv"
        android:text="@string/date"
        android:textColor="@color/black"/>

      <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/text_tv"
        android:layout_toEndOf="@+id/date_text_tv"
        android:alpha="0.80"

        android:textColor="@color/newblack"/>


      <TextView
        android:id="@+id/alt_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/date_tv"
        android:text="@string/alt"
        android:textColor="@color/black"/>

      <TextView
        android:id="@+id/alt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/date_tv"
        android:layout_toEndOf="@+id/alt_text_tv"
        android:alpha="0.80"

        android:textColor="@color/newblack"/>

      <TextView
        android:id="@+id/news_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/alt_tv"
        android:text="@string/news"
        android:textColor="@color/black"/>

      <TextView
        android:id="@+id/news_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/alt_tv"
        android:layout_toEndOf="@+id/news_text_tv"
        android:alpha="0.80"

        android:textColor="@color/newblack"/>

      <TextView
        android:id="@+id/transcript_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/news_tv"
        android:text="Transcript : "
        android:textColor="@color/black"/>

      <TextView
        android:id="@+id/transcript_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/news_tv"
        android:layout_toEndOf="@+id/news_text_tv"
        android:alpha="0.80"
        android:textColor="@color/newblack"/>


    </RelativeLayout>


  </android.support.v7.widget.CardView>


</LinearLayout>
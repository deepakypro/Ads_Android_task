<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <android.support.v7.widget.CardView
    android:id="@+id/cardview"
    style="@style/rapple_effect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <RelativeLayout
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView

        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:text="Barrel - Part -1"
        android:textColor="@color/black"
        android:textSize="16sp"/>


      <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/dimen8dp"
        android:layout_toEndOf="@+id/title_tv"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>


      <ImageView
        android:id="@+id/imv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/title_tv"
        android:adjustViewBounds="true"/>


      <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/imv"
        android:alpha="0.80"
        android:text="5 , Jan , 2016"
        android:textSize="12sp"/>

      <TextView
        android:id="@+id/num_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen8dp"
        android:layout_below="@+id/imv"
        android:layout_toStartOf="@+id/num_tv"
        android:text="num: "
        android:textSize="12sp"/>
      <TextView
        android:layout_marginBottom="@dimen/dimen8dp"
        android:id="@+id/num_tv"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imv"
        android:text="698"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/textspace16sp"/>


    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>